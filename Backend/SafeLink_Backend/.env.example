# SafeLink Environment Configuration Template
# Copy this file to .env and fill in your values
# NEVER commit .env file to version control!

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# Development (SQLite)
DATABASE_URL=sqlite:///data/safelink.db

# Production (PostgreSQL - Recommended)
# DATABASE_URL=postgresql://username:password@localhost:5432/safelink


# ============================================================================
# SECURITY
# ============================================================================
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_32_CHARS_MIN

# JWT Token Expiration (in minutes)
JWT_EXPIRATION_MINUTES=60


# ============================================================================
# NETWORK CONFIGURATION
# ============================================================================
# Network interface to monitor (check with: ip addr or ipconfig)
NETWORK_INTERFACE=eth0

# Linux examples: eth0, ens33, wlan0
# Windows examples: Ethernet, Wi-Fi, Local Area Connection


# ============================================================================
# API CONFIGURATION
# ============================================================================
API_HOST=0.0.0.0
API_PORT=8000

# CORS Origins (comma-separated, no spaces)
CORS_ORIGINS=http://localhost:5173,https://yourdomain.com


# ============================================================================
# THREAT INTELLIGENCE (Optional)
# ============================================================================
# Get API key from: https://www.abuseipdb.com/account/api
ABUSEIPDB_API_KEY=your_api_key_here_or_leave_empty


# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=INFO
LOG_FILE=logs/safelink.log

# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL


# ============================================================================
# APPLICATION MODE
# ============================================================================
ENVIRONMENT=production
DEBUG=false

# For development, use:
# ENVIRONMENT=development
# DEBUG=true


# ============================================================================
# MODEL CONFIGURATION
# ============================================================================
# Path to trained models
RF_MODEL_PATH=models/random_forest_model.joblib
ANN_MODEL_PATH=models/ann_model.pt

# Confidence threshold for alerts (0.0 to 1.0)
ALERT_THRESHOLD=0.7


# ============================================================================
# CONTINUOUS LEARNING
# ============================================================================
# Auto-retrain when this many new samples collected
AUTO_RETRAIN_THRESHOLD=1000

# Scheduled retraining interval (days)
RETRAIN_SCHEDULE_DAYS=7


# ============================================================================
# MITIGATION (Future Use)
# ============================================================================
# Enable/disable automatic mitigation
AUTO_MITIGATION_ENABLED=false

# SNMP community string (read-write)
SNMP_COMMUNITY=private

# Network device IPs for mitigation
NETWORK_DEVICES=192.168.1.1,192.168.1.2
