{
  "version": 2,
  "name": "safelink-network-defense",
  "builds": [
    {
      "src": "Backend/SafeLink_Backend/api.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb",
        "runtime": "python3.11"
      }
    },
    {
      "src": "Frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "Backend/SafeLink_Backend/api.py"
    },
    {
      "src": "/(.*)",
      "dest": "Frontend/$1"
    }
  ],
  "env": {
    "PYTHON_VERSION": "3.11.9",
    "NODE_VERSION": "20.x"
  },
  "regions": ["iad1"],
  "functions": {
    "Backend/SafeLink_Backend/api.py": {
      "memory": 3008,
      "maxDuration": 30
    }
  }
}
